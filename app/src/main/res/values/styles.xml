<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/background_primary</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/button_primary_pressed</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/button_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="strokeColor">@color/input_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/button_secondary_pressed</item>
    </style>

    <!-- Custom Text Input Layout Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_secondary</item>
        <item name="colorOnPrimary">@color/background_primary</item>
        <item name="colorSecondary">@color/accent_primary</item>
        <item name="colorSecondaryVariant">@color/accent_secondary</item>
        <item name="colorOnSecondary">@color/background_primary</item>
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error</item>
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>