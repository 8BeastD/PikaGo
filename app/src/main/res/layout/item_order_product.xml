<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/item_background"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Simple ImageView; Glide.circleCrop() makes it round -->
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_product_placeholder"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            tools:text="Organic Apples" />

        <TextView
            android:id="@+id/txtProductDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1kg • Fresh"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="Steam Iron" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹150"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            tools:text="₹35" />

        <TextView
            android:id="@+id/txtProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: 2"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:text="Qty: 1" />
    </LinearLayout>

</LinearLayout>
