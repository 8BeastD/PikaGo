<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradient_background">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtOrderId"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    tools:text="ORD123456789" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtDateLabel"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    tools:text="Today, Aug 16" />
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipKind"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/black"
                app:chipCornerRadius="20dp"
                app:ensureMinTouchTargetSize="true"
                app:chipMinHeight="32dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:contentDescription="Order type"
                tools:text="Pickup" />
        </LinearLayout>

        <!-- Slot -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/slot_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_schedule"
                android:layout_marginEnd="8dp"
                app:tint="@color/black" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    tools:text="08:00 PM - 10:00 PM" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtSlotDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="2dp"
                    tools:text="Today" />
            </LinearLayout>
        </LinearLayout>

        <!-- Amount / Method -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_currency_rupee"
                android:layout_marginEnd="8dp"
                app:tint="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAmountMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="₹266 • COD" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/dot_separator"
                android:layout_marginHorizontal="12dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPaymentMethod"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                app:chipMinHeight="24dp"
                app:chipCornerRadius="12dp"
                app:chipBackgroundColor="@color/black"
                android:textColor="@color/white"
                app:ensureMinTouchTargetSize="true"
                tools:text="COD" />
        </LinearLayout>

        <!-- Countdown -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/countdown_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_timer"
                android:layout_marginEnd="8dp"
                app:tint="@color/black" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="Starts in 02:15:30" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCountdownHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Be ready for pickup"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Status + Action -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/status_indicator_accepted"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    tools:text="ASSIGNED" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceed"
                style="@style/Widget.Material3.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                app:ensureMinTouchTargetSize="true"
                android:text="Proceed"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:icon="@drawable/ic_arrow_forward"
                app:iconSize="16dp"
                app:iconGravity="end"
                android:elevation="4dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
