<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorSurface"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Plain container (Preview-safe) -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:layout="@layout/view_map_preview" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:contentDescription="Start turn-by-turn navigation"
        app:icon="@android:drawable/ic_media_play"
        app:layout_anchor="@id/mapContainer"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="16dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabRecenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recenter"
        android:contentDescription="Recenter map"
        app:icon="@android:drawable/ic_menu_mylocation"
        app:layout_anchor="@id/mapContainer"
        app:layout_anchorGravity="bottom|start"
        android:layout_margin="16dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
