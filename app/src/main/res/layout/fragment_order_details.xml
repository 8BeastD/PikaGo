<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Enhanced Toolbar with modern gradient -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/toolbar_gradient_modern"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white"
        app:titleTextColor="@android:color/white"
        app:title="Order Details"
        android:elevation="12dp"
        app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall" />

    <!-- Parent ScrollView for entire content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="0dp">

                <!-- Order Status Header Card with enhanced design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/surface_variant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtOrderId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ORD123456"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:letterSpacing="0.01"
                                    tools:text="ORD123456" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Order ID"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_secondary"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <!-- Enhanced status chip -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipOrderStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Progress"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="12dp"
                                app:chipBackgroundColor="@color/status_progress"
                                app:chipCornerRadius="16dp"
                                app:chipMinHeight="36dp"
                                app:chipIcon="@drawable/ic_clock"
                                app:chipIconTint="@android:color/white"
                                app:chipIconSize="16dp"
                                app:ensureMinTouchTargetSize="true"
                                tools:text="In Progress" />

                        </LinearLayout>

                        <!-- Date and Amount Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/info_row_background"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_calendar"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/icon_accent" />

                                <TextView
                                    android:id="@+id/txtDateTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Today, 2:30 PM - 3:30 PM"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:text="Dec 15, 2024 • 2:30 PM - 3:30 PM" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/txtTotalAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹450"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/amount_color"
                                    tools:text="₹450" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Amount"
                                    android:textSize="11sp"
                                    android:textColor="@color/on_surface_secondary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Payment Status Card with modern design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/surface_variant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/icon_container_payment"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_payment"
                                    app:tint="@color/payment_icon" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Details"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface_primary"
                                android:letterSpacing="0.01" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Method:"
                                android:textColor="@color/on_surface_secondary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtPaymentMethod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cash on Delivery"
                                android:textColor="@color/on_surface_primary"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:text="UPI" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Status:"
                                android:textColor="@color/on_surface_secondary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipPaymentStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="16dp"
                                app:chipBackgroundColor="@color/payment_success"
                                app:chipCornerRadius="18dp"
                                app:chipMinHeight="36dp"
                                app:chipIcon="@drawable/ic_check_circle"
                                app:chipIconTint="@android:color/white"
                                app:chipIconSize="16dp"
                                app:ensureMinTouchTargetSize="true"
                                tools:text="Paid" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Order Items Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/surface_variant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/icon_container_items"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_shopping_bag"
                                    app:tint="@color/items_icon" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Items"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface_primary"
                                android:letterSpacing="0.01" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerOrderItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:clipToPadding="false"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_order_product" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Pickup Address Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/surface_variant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/icon_container_pickup"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_pickup_location"
                                    app:tint="@color/pickup_icon" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pickup Address"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface_primary"
                                android:letterSpacing="0.01" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtPickupAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123 Store Street, Commercial Area, City - 123456"
                            android:textColor="@color/on_surface_primary"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="16dp"
                            tools:text="ABC Store, 123 Main Street, Commercial Area, New Delhi - 110001" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider_modern"
                            android:layout_marginVertical="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Contact:"
                                android:textColor="@color/on_surface_secondary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtPickupContactName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Store Manager"
                                android:textColor="@color/on_surface_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Phone:"
                                android:textColor="@color/on_surface_secondary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtPickupPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+91 9876543210"
                                android:textColor="@color/phone_number"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Drop Address Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/surface_variant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/icon_container_delivery"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_drop_location"
                                    app:tint="@color/delivery_icon" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Address"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface_primary"
                                android:letterSpacing="0.01" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtDeliveryAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="456 Home Street, Residential Area, City - 654321"
                            android:textColor="@color/on_surface_primary"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="16dp"
                            tools:text="456 Customer Street, Residential Area, New Delhi - 110002" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider_modern"
                            android:layout_marginVertical="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Contact:"
                                android:textColor="@color/on_surface_secondary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtCustomerName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="John Doe"
                                android:textColor="@color/on_surface_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="John Doe" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Phone:"
                                android:textColor="@color/on_surface_secondary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtCustomerPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+91 9876543210"
                                android:textColor="@color/phone_number"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="+91 9876543210" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Delivery Code Card with enhanced security design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/surface_variant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/icon_container_security"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_security"
                                    app:tint="@color/security_icon" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Verification"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_surface_primary"
                                android:letterSpacing="0.01" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/code_container_modern"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Delivery Code"
                                    android:textColor="@color/on_surface_secondary"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/txtDeliveryCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PIKAGO2024"
                                    android:textColor="@color/security_code"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:fontFamily="monospace"
                                    android:letterSpacing="0.1"
                                    tools:text="PIKAGO2024" />

                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnCopyCode"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="@color/copy_button_bg"
                                app:icon="@drawable/ic_copy"
                                app:iconTint="@color/copy_button_icon"
                                app:iconSize="20dp"
                                app:cornerRadius="12dp"
                                android:contentDescription="Copy delivery code" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Action Buttons at bottom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_actions_background"
                android:elevation="16dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartNavigation"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/black"
                    android:text="Start Navigation"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp"
                    app:elevation="6dp"
                    app:icon="@drawable/ic_navigation"
                    app:iconGravity="textStart"
                    app:iconSize="22dp"
                    app:rippleColor="@color/navigation_ripple" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCallCustomer"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:text="Call Customer"
                        android:textColor="@color/call_button_text"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_phone"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconTint="@color/call_button_icon"
                        app:strokeColor="@color/call_button_stroke"
                        app:strokeWidth="2dp"
                        app:rippleColor="@color/call_button_ripple" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMarkComplete"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/complete_button"
                        android:text="Complete"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="30dp"
                        app:elevation="4dp"
                        app:icon="@drawable/ic_check"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:rippleColor="@color/complete_ripple" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>