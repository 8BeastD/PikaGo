<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.NavigationActivity">

    <!-- Premium AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Premium Navigation"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"
        style="@style/Widget.Material3.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Map Container -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/fabContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:alpha="0.95"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                app:indicatorColor="@android:color/black"
                app:trackColor="@android:color/darker_gray"
                app:indicatorSize="48dp"
                app:trackThickness="4dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Navigating to Pickup"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â€¢ "
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/etaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- min"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/phaseChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICKUP"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@android:color/black"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- FAB Container - Fixed spacing -->
    <LinearLayout
        android:id="@+id/fabContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/swipeCompletionCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FAB Start Navigation -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Start Navigation"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/black"
            android:layout_weight="1"/>

        <!-- FAB Recenter -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabRecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Recenter"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            app:backgroundTint="@android:color/white"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- Swipe Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/swipeCompletionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        android:alpha="0.98"
        app:cardBackgroundColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/swipeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Swipe to Complete Pickup"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/callCustomerBtn"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="ðŸ“ž"
                    android:textSize="18sp"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp"
                    android:textColor="@android:color/white"
                    android:contentDescription="Call customer"/>
            </LinearLayout>

            <TextView
                android:id="@+id/swipeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark items as collected and move to delivery"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/swipeSlider"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                app:labelBehavior="gone"
                app:trackColorActive="@android:color/white"
                app:trackColorInactive="#80FFFFFF"
                app:thumbColor="@android:color/white"
                app:trackHeight="6dp"
                android:contentDescription="Swipe slider to complete pickup"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>