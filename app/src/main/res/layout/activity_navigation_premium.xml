<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".ui.NavigationActivity">

    <!-- Premium Gradient Background -->
    <View
        android:id="@+id/backgroundGradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/premium_gradient_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Premium AppBar with Glass Effect -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#E6000000"
        android:elevation="8dp"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="Premium Navigation"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"
        style="@style/Widget.Material3.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Map Container with Rounded Corners -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mapCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintBottom_toTopOf="@id/actionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Premium Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="16dp"
        android:alpha="0.98"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="20dp"
                app:indicatorColor="@android:color/black"
                app:trackColor="#E0E0E0"
                app:indicatorSize="56dp"
                app:trackThickness="6dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Navigating to Pickup"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-medium"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif"/>

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="#CCCCCC"
                        android:alpha="0.8"/>

                    <TextView
                        android:id="@+id/etaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- min"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/phaseChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICKUP"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@android:color/black"
                app:chipCornerRadius="16dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Action Container -->
    <LinearLayout
        android:id="@+id/actionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/swipeCompletionCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FAB Container with Premium Spacing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- FAB Start Navigation -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fabStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ§­ Start Navigation"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/black"
                app:elevation="8dp"/>

            <!-- FAB Recenter -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fabRecenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ“ Recenter"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:backgroundTint="@android:color/white"
                app:elevation="8dp"
                app:strokeColor="@android:color/black"
                app:strokeWidth="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Premium Swipe Completion Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/swipeCompletionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="20dp"
        android:alpha="0.98"
        app:cardBackgroundColor="@android:color/black"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/premium_card_bg">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/swipeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swipe to Complete Pickup"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/swipeHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark items as collected and move to delivery"
                        android:textSize="13sp"
                        android:textColor="#CCFFFFFF"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/callCustomerBtn"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:minWidth="56dp"
                    android:minHeight="56dp"
                    android:text="ðŸ“ž"
                    android:textSize="20sp"
                    app:backgroundTint="#1AFFFFFF"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp"
                    app:cornerRadius="28dp"
                    android:textColor="@android:color/white"
                    android:contentDescription="Call customer"/>
            </LinearLayout>

            <!-- Premium Slider Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/slider_track_bg"
                android:padding="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘†"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/swipeSlider"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:stepSize="1"
                    app:labelBehavior="gone"
                    app:trackColorActive="#FFFFFFFF"
                    app:trackColorInactive="#4DFFFFFF"
                    app:thumbColor="#FFFFFFFF"
                    app:thumbRadius="18dp"
                    app:trackHeight="8dp"
                    android:contentDescription="Swipe slider to complete task"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“"
                    android:textSize="18sp"
                    android:textColor="#4DFFFFFF"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <!-- Progress Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swipe right to complete"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:indicatorColor="@android:color/white"
            android:indeterminate="true"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>